<p id="notice"><%= notice %></p>

<h1>レシピ投稿</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>

<div class="container mb-5 pt-2">
  <h1>レシピ投稿</h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped">
        <thead>
        <% @posts.each do |post| %>
        <tr>
          <th scope="col"><%= post.title %></th>
          <th scope="col"><%= post.body %></th>
          <th scope="col"><%= post.user_id %></th>
          <th scope="col"><%= post.created_at %></th>
          <th scope="col"></th>
        </tr>
        <% end %>
        </thead>
        <tbody>
        <%= render @posts %>
        </tbody>
      </table>
    </div>
  </div>
</div>
